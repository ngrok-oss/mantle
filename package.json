{
  "name": "@ngrok/mantle",
  "description": "mantle is ngrok's UI library and design system.",
  "author": "ngrok",
  "license": "MIT",
  "version": "0.0.4",
  "homepage": "https://mantle.ngrok.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngrok-oss/mantle"
  },
  "sideEffects": false,
  "type": "module",
  "browserslist": [
    "last 2 years, not dead, > 0.2%"
  ],
  "main": "./dist/index.js",
  "source": "./components/index.tsx",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./mantle.css": "./dist/mantle.css"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build-storybook": "pnpm run cmd:storybook build",
    "build": "rm -rf dist && parcel build --dist-dir dist && cp -a ./assets/mantle.css ./dist",
    "cmd:storybook": "STORYBOOK_DISABLE_TELEMETRY=1 storybook",
    "docs:build": "remix build",
    "docs:dev": "remix dev --manual",
    "docs:serve": "remix-serve ./build/index.js",
    "fmt:check": "prettier --cache --check .",
    "fmt": "prettier --write --cache .",
    "gen:docs-routes": "tsx scripts/gen-docs-routes",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prepublishOnly": "pnpm run build",
    "storybook": "pnpm run cmd:storybook dev -p 6006",
    "test": "TZ=UTC vitest",
    "typecheck": "tsc --incremental --noEmit --skipLibCheck"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.0.5",
    "@radix-ui/react-dropdown-menu": "2.0.6",
    "@radix-ui/react-icons": "1.3.0",
    "@radix-ui/react-popover": "1.0.7",
    "@radix-ui/react-select": "2.0.0",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tooltip": "1.0.7",
    "@remix-run/css-bundle": "2.3.1",
    "@remix-run/node": "2.3.1",
    "@remix-run/react": "2.3.1",
    "@remix-run/serve": "2.3.1",
    "@uidotdev/usehooks": "2.4.1",
    "@vercel/remix": "2.2.0",
    "class-variance-authority": "0.7.0",
    "clsx": "2.0.0",
    "isbot": "3.7.1",
    "lucide-react": "0.294.0",
    "prismjs": "1.29.0",
    "tailwind-merge": "2.1.0",
    "tiny-invariant": "1.3.1"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "11.1.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@parcel/packager-ts": "2.10.3",
    "@parcel/transformer-typescript-types": "2.10.3",
    "@remix-run/dev": "2.3.1",
    "@remix-run/eslint-config": "2.3.1",
    "@storybook/addon-essentials": "7.6.3",
    "@storybook/addon-interactions": "7.6.3",
    "@storybook/addon-links": "7.6.3",
    "@storybook/addon-onboarding": "1.0.9",
    "@storybook/addon-styling": "1.3.7",
    "@storybook/blocks": "7.6.3",
    "@storybook/builder-vite": "7.6.3",
    "@storybook/react": "7.6.3",
    "@storybook/react-vite": "7.6.3",
    "@storybook/testing-library": "0.2.2",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.1",
    "@types/lodash.camelcase": "4.3.9",
    "@types/node": "20.10.3",
    "@types/prismjs": "1.26.3",
    "@types/react": "18.2.42",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "@vitejs/plugin-react-swc": "3.5.0",
    "@vitest/ui": "1.0.1",
    "autoprefixer": "10.4.16",
    "browserslist": "4.22.2",
    "commander": "11.1.0",
    "copyfiles": "2.4.1",
    "eslint": "8.55.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-storybook": "0.6.15",
    "fast-glob": "3.3.2",
    "jsdom": "22.1.0",
    "lodash.camelcase": "4.3.0",
    "parcel": "2.10.3",
    "postcss": "8.4.32",
    "prettier": "3.1.0",
    "prettier-plugin-tailwindcss": "0.5.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "storybook": "7.6.3",
    "tailwindcss": "3.3.6",
    "tailwindcss-animate": "1.0.7",
    "tsx": "4.6.2",
    "typescript": "5.3.2",
    "vite": "5.0.5",
    "vite-tsconfig-paths": "4.2.1",
    "vitest": "1.0.1",
    "vitest-dom": "0.1.1"
  },
  "peerDependencies": {
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "react": "^18",
    "react-dom": "^18"
  }
}