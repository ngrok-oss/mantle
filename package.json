{
  "private": true,
  "name": "mantle",
  "license": "MIT",
  "packageManager": "pnpm@10.19.0",
  "type": "module",
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "serve": "turbo run serve",
    "clean": "turbo run clean",
    "clean:node_modules": "node ./scripts/clean-node-modules.js",
    "fmt:check": "biome check . --diagnostic-level=error",
    "fmt": "biome check . --write --diagnostic-level=error",
    "lint:fix": "biome lint . --write --diagnostic-level=error",
    "lint": "biome lint . --diagnostic-level=error",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "turbo run build --filter=@ngrok/mantle && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@types/node": "22.18.12",
    "turbo": "2.5.8",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@mjackson/node-fetch-server": "npm:@remix-run/node-fetch-server@0.10.0",
      "@vitejs/plugin-react": ">=5.0.4",
      "cookie": ">=1.0.2",
      "esbuild": ">=0.25.11"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild",
      "@tailwindcss/oxide"
    ]
  }
}
