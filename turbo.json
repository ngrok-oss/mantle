{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["VERCEL_GIT_COMMIT_SHA", "VERCEL_DEPLOYMENT_ID", "VERCEL"],
  "tasks": {
    "build": {
      "cache": true,
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["**/build/**", "**/.vercel/**", "**/dist/**"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "serve": {
      "dependsOn": ["^build"],
      "outputs": ["public/build/**"]
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "cache": false,
      "outputs": ["**/.react-router/**"]
    }
  },
  "remoteCache": {
    "enabled": true,
    "apiUrl": "https://turborepo.corp.ngrok.com"
  }
}
